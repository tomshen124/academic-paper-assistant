# 环境配置
ENVIRONMENT=development

# LLM API密钥
# OpenAI API密钥
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1  # 可选，如果使用代理或自托管模型

# Anthropic API密钥
ANTHROPIC_API_KEY=your_anthropic_api_key

# DeepSeek API密钥
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions

# SiliconFlow API密钥
SILICONFLOW_API_KEY=your_siliconflow_api_key
SILICONFLOW_API_URL=https://api.siliconflow.com/v1/chat/completions

# 阿里云 API密钥
ALIYUN_API_KEY=your_aliyun_api_key
ALIYUN_API_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# 学术搜索 API密钥
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key  # 可选

# LLM配置
# 默认模型，可选值: gpt-3.5-turbo, gpt-4, deepseek-chat, deepseek-reasoner, claude-2, Qwen/QwQ-32B, qwen-turbo, qwen-plus
DEFAULT_MODEL=deepseek-chat

# 模型参数
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_FREQUENCY_PENALTY=0.0
LLM_PRESENCE_PENALTY=0.0

# 缓存配置
LITELLM_CACHE_ENABLE=true
LITELLM_CACHE_FOLDER=.cache/litellm

# 日志配置
LOG_LEVEL=INFO

# Redis配置 (用于Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password  # 如果需要密码

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Token预算配置
MAX_TOKENS_PER_REQUEST=4000
TOKEN_BUDGET_PER_PROJECT=100000
