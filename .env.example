# 环境配置
ENVIRONMENT=development

# API密钥
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1  # 可选，如果使用代理或自托管模型
ANTHROPIC_API_KEY=your_anthropic_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key  # 可选

# LLM配置
DEFAULT_MODEL=gpt-3.5-turbo
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.3

# 缓存配置
LITELLM_CACHE_ENABLE=true
LITELLM_CACHE_FOLDER=.cache/litellm

# 日志配置
LOG_LEVEL=INFO

# Redis配置 (用于Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password  # 如果需要密码

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Token预算配置
MAX_TOKENS_PER_REQUEST=4000
TOKEN_BUDGET_PER_PROJECT=100000
